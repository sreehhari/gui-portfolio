---
interface Props {
  title: string;
  description: string;
  icon: string;
  link: string;
}

const { title, description, icon, link } = Astro.props;
---

<div>
  <a href={link} target="_blank">
    <div
      class="flex flex-row h-full bg-zinc-800 drop-shadow-md shadow-xl p-3 rounded-md items-center"
    >
      <div class="text-4xl">
        <span class="m-4">{icon}</span>
      </div>
      <div class="flex flex-col mx-2">
        <p
          class="font-black text-xl underline underline-offset-4 decoration-cyan-600 decoration-2"
        >
          {title}
        </p>
        <p class="mt-1 text-xs">{description}</p>
      </div>
    </div>
  </a>
</div>
