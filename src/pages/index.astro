        <div class="mt-3 pt-2 border-t border-gray-700 text-gray-500 text-xs">
          <span class="text-gray-400">$</span> ls -la projects/ | total {
            projects.length
          }
        </div>
      </div>
    </section>

    <section id="blog" class="mt-8">
      <div class="font-mono text-sm text-gray-300">
        <span id="current-time">
          {new Date().toLocaleTimeString()}
        </span>
      </div>

    </section>
    <script>
      function updateTime(){
        const timeElement = document.getElementById("current-time");
        if(timeElement){
          timeElement.textContent = new Date().toLocaleTimeString();
        }
      }
      setInterval(updateTime,1000);
