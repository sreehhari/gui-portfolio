---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404: Not Found">
  <main class="mt-6 flex justify-center">
    <div class="w-full max-w-2xl">
      <section aria-labelledby="error-heading">
        <div class="font-mono text-sm p-6" role="region">
          <!-- Content -->
          <div class="text-xs">
            <div class="space-y-3">
              <!-- Error display -->
              <div class="flex items-center gap-4 mb-6">
                <p class="text-4xl">ðŸ¤”</p>
                <div class="flex flex-col">
                  <h1 class="text-red-400 text-2xl font-bold">404</h1>
                  <p class="text-gray-400 text-xs">Page Not Found</p>
                </div>
              </div>

              <!-- Error message -->
              <div class="bg-red-500/10 border border-red-500/30 rounded-lg p-4 mb-4">
                <div class="flex items-start gap-2">
                  <span class="text-red-400 font-bold">ERROR:</span>
                  <p class="text-gray-200 leading-relaxed">
                    The requested resource could not be found on this server. 
                    The page you are trying to access does not exist or has been moved.
                  </p>
                </div>
              </div>

              <div class="border-b border-gray-600 w-full mb-3"></div>

              <!-- Terminal-style error details -->
              <div class="space-y-2">
                <div class="flex">
                  <span class="text-gray-400 w-24 shrink-0">Status</span>
                  <span class="text-red-400 font-bold">404 Not Found</span>
                </div>

                <div class="flex">
                  <span class="text-gray-400 w-24 shrink-0">Request</span>
                  <span class="text-white break-all" id="current-path">
                    Loading...
                  </span>
                </div>

                <div class="flex">
                  <span class="text-gray-400 w-24 shrink-0">Server</span>
                  <span class="text-white">terminus v1.0</span>
                </div>

                <div class="flex">
                  <span class="text-gray-400 w-24 shrink-0">Timestamp</span>
                  <span class="text-white" id="error-time">
                    Loading...
                  </span>
                </div>
              </div>

              <div class="border-b border-gray-600 w-full my-3"></div>

              <!-- Suggestions -->
              <div class="space-y-2">
                <p class="text-gray-400 text-xs mb-2">Suggested actions:</p>
                <div class="space-y-1 pl-4">
                  <p class="text-gray-300">
                    <span class="text-gray-500">01.</span> Check the URL for typos
                  </p>
                  <p class="text-gray-300">
                    <span class="text-gray-500">02.</span> Return to the 
                    <a 
                      href="/" 
                      class="text-cyan-400 hover:text-cyan-300 underline focus:outline-none focus:ring-2 focus:ring-cyan-600 focus:ring-offset-2 focus:ring-offset-gray-900"
                    >
                      homepage
                    </a>
                  </p>
                  <p class="text-gray-300">
                    <span class="text-gray-500">03.</span> Browse available 
                    <a 
                      href="/blog" 
                      class="text-cyan-400 hover:text-cyan-300 underline focus:outline-none focus:ring-2 focus:ring-cyan-600 focus:ring-offset-2 focus:ring-offset-gray-900"
                    >
                      blog posts
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>

  <script>
    // Display current path and timestamp
    document.addEventListener('DOMContentLoaded', () => {
      const pathElement = document.getElementById('current-path');
      const timeElement = document.getElementById('error-time');
      
      if (pathElement) {
        pathElement.textContent = window.location.pathname;
      }
      
      if (timeElement) {
        timeElement.textContent = new Date().toISOString();
      }
    });
  </script>
</BaseLayout>
